<div class="container">
  <div class="row my-5">
    <div class="col-md-9 mx-auto">
      <h3 class="text-center", style="background-color: silver; width: 20%">商品詳細</h3>
    </div>
  </div>

  <div class="row justify-content-center pt-3 pb-5">
    <div class="col-md-4 text-center">
      <%= image_tag @item.get_image, style: "width: 300px; height: 250px" %>
    </div>
    <div class="col-md-8">
      <div class="row mb-3">
        <div class="col-md-3">
          <h5>商品名</h5>
        </div>
        <div class="col-md-6">
          <h5><%= @item.name %></h5>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3">
          <h5>商品説明</h5>
        </div>
        <div class="col-md-6">
          <h5><%= @item.introduction %></h5>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3">
          <h5>ジャンル</h5>
        </div>
        <div class="col-md-6">
          <h5><%= @item.genre.name %></h5>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-3">
          <h5>税込価格</br>(税抜価格)</h5>
        </div>
        <div class="col-md-6">
          <h4><%= @item.add_tax_price.to_s(:delimited) %> (
          <%= @item.price.to_s(:delimited) %> ) 円</h4>
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-md-3">
          <h5>販売ステータス</h5>
        </div>
        <div class="col-md-6">
          <% if @item.is_active %>
          <h5 class="text-success font-weight-bold">販売中</h5>
          <% else %>
          <h5 class="text-black-50 font-weight-bold">販売停止中</h5>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5 text-center">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</div>
