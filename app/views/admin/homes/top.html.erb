<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h3 class="my-5 text-center", style="background-color: silver; width: 30%">注文履歴一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table w-100 text-left table-condensed border-bottom">
        <thead style="background-color: silver">
          <tr>
            <th class="text-center", style="width: 20%">購入日時</th>
            <th style="width: 20%">購入者</th>
            <th style="width: 20%">注文個数</th>
            <th style="width: 20%">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="text-center">
            <%= link_to admin_order_path(order.id), class: 'text-dark', style: 'text-decoration: underline' do %>
            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
            </td>
            <td>
            <%= order.customer.last_name + order.customer.first_name %>
            </td>
            <td>
            <%= order.order_items.sum(:number) %>
            </td>
            <td>
            <%= order.order_status_i18n %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>