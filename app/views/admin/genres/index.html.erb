<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-6">
      <h3 class="my-5",style="background-color: silver">ジャンル一覧・追加</h3>

      <% if @genre.errors.any? %>
　    <div id="error_explanation" class="w-50" style="border: 1.5px solid red">
　      <%= @genre.errors.count %>件のエラーが発生しました
　      <ul class="mb-0">
　        <% @genre.errors.full_messages.each do |message| %>
　        <li><%= message %></li>
　        <% end %>
　      </ul>
　    </div>
　    <% end %>

      <%= form_with model: @genre, url: '/admin/genres', method: :post, class: 'my-5 form-inline' do |f| %>
      <div class="col-md-8 form-group">
      <%= f.label :genre, "ジャンル名", class: 'mr-5' %>
      <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="col-md-4 actions ">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
      <% end %>

      <div class="col-md-8">
      <table class="table my-5 border-bottom">
        <thead style="background-color: silver">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
       </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
