<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h3 class="my-5 text-center", style="background-color: silver; width: 20%">会員一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table w-100 text-left table-condensed border-bottom">
        <thead style="background-color: silver">
          <tr>
            <th class="text-center", style="width: 10%">会員ID</th>
            <th style="width: 20%"><u>氏名</u></th>
            <th style="width: 30%">メールアドレス</th>
            <th style="width: 20%">ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="text-center">
            <%= customer.id %>
            </td>
            <td>
            <%= link_to admin_customer_path(customer.id), class: 'text-dark', style: 'text-decoration: underline' do %>
            <%= customer.last_name + customer.first_name %>
            <% end %>
            </td>
            <td>
            <%= customer.email %>
            </td>
            <td>
            <% if customer.is_deleted %>
            <span class="text-black-50 font-weight-bold">退会</span>
            <% else %>
            <span class="text-success font-weight-bold">有効</span>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>