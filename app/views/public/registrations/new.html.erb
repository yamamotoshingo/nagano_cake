<div class="container">
  <div class="row my-5">
    <div class="col-md-4 text-center">
      <h3><span style="background-color: silver">新規会員登録</span></h3>
    </div>
  </div>

<%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row field mb-2">
    <div class="col-md-3 d-flex align-items-end justify-content-between pr-1 pl-5">
      <label>名前</label>
      <%= f.label :last_name, "(姓)　" %>
    </div>
    <div class="col-md-3 px-0">
      <%= f.text_field :last_name, placeholder: "令和", style: "width: 80%" %>
    </div>
    <div class="col-md-3 text-right px-0">
      <%= f.label :first_name, "(名)　" %>
      <%= f.text_field :first_name, placeholder: "道子", style: "width: 80%" %>
    </div>
  </div>
  <div class="row field mb-2">
    <div class="col-md-3 d-flex align-items-end justify-content-between pr-1 pl-5">
      <label>フリガナ</label>
      <%= f.label :last_name_kana, "(セイ)" %>
    </div>
    <div class="col-md-3 px-0">
      <%= f.text_field :last_name_kana, placeholder: "レイワ", style: "width: 80%" %>
    </div>
    <div class="col-md-3 text-right px-0">
      <%= f.label :first_name_kana, "(メイ)" %>
      <%= f.text_field :first_name_kana, placeholder: "ミチコ", style: "width: 80%" %>
    </div>
  </div>
  <div class=" row field mb-2">
    <div class="col-md-3 pl-5">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-md-3 px-0">
    <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", style: "width: 80%" %>
    </div>
  </div>

  <div class="row field mb-2">
    <div class="col-md-3 pl-5">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-md-3 px-0">
      <%= f.text_field :postal_code, placeholder: "0000000", style: "width: 80%" %>
    </div>
  </div>

  <div class="row field mb-2">
    <div class="col-md-3 pl-5">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-md-6 px-0" >
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 100%" %>
    </div>
  </div>

  <div class="row field mb-2">
    <div class="col-md-3 pl-5">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    </div>
    <div class="col-md-3 px-0" >
      <%= f.text_field :telephone_number, placeholder: "0000000000", style: "width: 80%" %>
    </div>
  </div>

  <div class="row field mb-2">
    <div class="col-md-3 pl-5">
    <%= f.label :password, "パスワード(6文字以上)" %>
    </div>
    <div class="col-md-3 px-0">
    <%= f.password_field :password, autocomplete: "new-password", style: "width: 80%" %>
    </div>
  </div>

  <div class="row field mb-3">
    <div class="col-md-3 pl-5">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    </div>
    <div class="col-md-3 px-0">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 80%" %>
    </div>
  </div>

  <div class="row actions mb-5">
    <div class="col-md-3"></div>
    <div class="col-md-3 px-0">
      <%= f.submit "新規登録", class: 'btn btn-success', style: "width: 70%" %>
    </div>
    <% end %>
  </div>

  <div class="row mb-3">
    <div class="col-md-4 text-center">
      <h3><span style="background-color: silver">既に登録済みの方</span></h3>
    </div>
  </div>
  <%= render "public/shared/links" %>
</div>
